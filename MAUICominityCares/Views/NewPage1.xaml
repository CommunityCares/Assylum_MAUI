<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUICominityCares.Views.NewPage1"
             Title="NewPage1">
    <Grid BackgroundColor="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" VerticalOptions="Center">
            <Button x:Name="btnAsilos" Text="Ver Campañas Vigentes" Clicked="btnAsilos_Clicked" Margin="50, 25, 50, 10" BackgroundColor="#2196F3" TextColor="White" CornerRadius="8" Padding="12" FontSize="16" />
            <Button x:Name="BtnCerradas" Text="Ver Campañas Cerradas" Clicked="BtnCerradas_Clicked" Margin="50, 10, 50, 10" BackgroundColor="#2196F3" TextColor="White" CornerRadius="8" Padding="12" FontSize="16" />
        </StackLayout>

        
    </Grid>
</ContentPage>