<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUICominityCares.MainPage">

    <ScrollView>
        <StackLayout Margin="20">
            <Entry Placeholder="Correo electrónico" x:Name="EmailEntry" Margin="0,10" />
            <Entry Placeholder="Contraseña" x:Name="PasswordEntry" IsPassword="True" Margin="0,10" />

            <Button Text="Iniciar sesión" Clicked="OnLoginButtonClicked" Margin="0,20" BackgroundColor="#2196F3" TextColor="White" CornerRadius="8" Padding="12" FontSize="16" />

            <Button x:Name="btnRegistro" Text="Registrarse" Clicked="btnRegistro_Clicked" Margin="0,10" BackgroundColor="#2196F3" TextColor="White" CornerRadius="8" Padding="12" FontSize="16" />
        </StackLayout>
    </ScrollView>

</ContentPage>
